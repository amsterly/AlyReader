<aly.com.alyreader.widgets.PlayerDiscView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/player_disc_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"

        android:padding="1dp">

        <ImageView
            android:id="@+id/player_disc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@drawable/disc"
            app:layout_heightPercent="80%w"
            app:layout_marginPercent="5%w"
            app:layout_widthPercent="80%w" />

        <ImageView
            android:id="@+id/player_disc_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:background="@drawable/disc_base"
            android:scaleType="centerCrop"
            app:layout_heightPercent="70%w"
            app:layout_widthPercent="70%w" />

        <ImageView
            android:id="@+id/player_needle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/stick"
            app:layout_heightPercent="50%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="30%w"
            app:layout_widthPercent="30%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>


</aly.com.alyreader.widgets.PlayerDiscView>
